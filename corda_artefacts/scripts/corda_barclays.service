[Unit]
Description=Corda Node - Bank Barclays - party B
Requires=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/corda/network/nodes/barclays_node
ExecStart=sudo /usr/bin/java -jar /opt/corda/network/nodes/barclays_node/corda.jar
Restart=on-failure

[Install]
WantedBy=multi-user.target
